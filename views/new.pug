extends ../application.pug

block content
  .container
    .row
      .col-xs-8.offset-xs-2
        h1 Create a new message
        form(action="/message" method="POST")
          div(class="form-group")
            label(for="message-title") Title
            input(name="title" type="text" class="form-control" id="message-title")
          div(class="form-group")
            label(for="message-body") Message
            textarea(name="body" class="form-control" rows=5 id="message-body")
          div(class="form-group text-xs-right")
            button(type="submit" class="btn btn-lg btn-success") Post your message
